    "docs": "dune build @doc --root .",
    "docs-path": "esy echo #{self.target_dir}/default/_doc/_html"
  },
  "dependencies": {
    "@esy-ocaml/reason": "<4.0.0",
    "@opam/base64": "*",
    "@opam/containers": "*",
    "@opam/dune": "*",
    "@opam/hex": "*",
    "@opam/nocrypto": "*",
    "@opam/ppx_deriving_yojson": "*",
    "@opam/ppx_deriving": "*",
    "@opam/x509": "*",
    "@opam/yojson": "*",
    "ocaml": ">=4.9.0"
  },
  "devDependencies": {
    "@opam/lwt": "*",
    "@opam/merlin": "*",
    "@opam/ocamlformat": "*",
    "@opam/odoc": "*",
    "@reason-native/rely": "*",
    "refmterr": "*"
  },
  "resolutions": {
    "@esy-ocaml/reason": "facebook/reason:reason.json#ede1f25c895ac9c6a93f7d3c87a19eaa8de366f0",
    "@opam/nocrypto": "mirleft/ocaml-nocrypto:nocrypto.opam#80b7b4b9bd1ccfba3ec93d85cd82bfb3dc10f887"
